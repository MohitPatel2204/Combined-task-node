        <div class="row">
            <div class="col"><h3 class="text-danger text-center">Javascript Events</h3></div>
        </div>

        <div class="row">
            <div class="col-md-3 bg-light">
                <h5>Onabort</h5>
                <div class="event">
                    <video src="./media/video (2160p).mp4" controls onabort="alert('Video is abort')"></video>
                </div>
            </div>

            <div class="col-md-3 bg-primary">
                <h5>Onblur</h5>
                <input type='text' onblur="blurfun()" id='blurtxt' class="form-control">
            </div>
            
            <div class="col-md-3 bg-light">
                <h5>Oncanplay</h5>
                <video src="./media/video (2160p).mp4" oncanplay="canplay()" height="300px" width="300px"  controls></video>
                <p id="msgcanplay"></p>
            </div>
            
            <div class="col-md-3 bg-primary">
                <h5>Oncanplaythrough</h5>
                <video src="./media/video (2160p).mp4" oncanplaythrough="canplaythrough()" height="300px" width="300px"  controls></video>
                <p id="msgcanplaythrough"></p>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-3 bg-primary">
                <h5>onchange</h5>
                <select onchange="change()" id='course' class="form-control">
                    <option selected disabled>Select</option>
                    <option>BCA</option>
                    <option>MCA</option>
                </select>
                <p id="msgchange"></p>
            </div>
            <div class="col-md-3 bg-light">
                <h5>onclick</h5>
                <button class="btn btn-primary" onClick="alert('onclick event is occur');">click me</button>
            </div>
            <div class="col-md-3 bg-primary">
                <h5>oncontextmenu</h5>
                <p oncontextmenu="contextmenu();">Click right click</p>
                <p style="visibility: hidden;" id="msgcontextmenu">This is contextmenu event</p>
            </div>
            <div class="col-md-3 bg-light"> onresize="alert('textarea size is size changed');"
                <h5>ondblclick</h5>
                <p ondblclick="dbclick(this);">Double Click me</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 bg-light">
                <h5>ondrag,<BR>ondragstart,<br>ondragend</h5>
                <DIV class="dragcontainer" ondrop="drop(this);" ondragover="dragover(this);"><P draggable="true" ondrag="drag(this);" ondragstart="dragstart(this);" ondragend="dragend(this);">Drage me</p></DIV>
                <p id="dragmsg"></p>
                <div class="dragcontainer"></div>
            </div>
            <div class="col-md-3 bg-primary">
                <h5>ondurationchange</h5>
                <video src="./media/video (2160p).mp4" height="300px" width="300px" ondurationchange="durationchange();" controls></video>
                <p id="msgdurationchange"></p>
            </div>
            <div class="col-md-3 bg-light">
                <h5>onended</h5>
                <video src="./media/video (2160p).mp4" height="300px" width="300px" onended="ended(this);" controls></video>
                <p id="msgended"></p>
            </div>
            <div class="col-md-3 bg-primary">
                <h5>onerror</h5>
                <img src="1.jpg" onerror="error1(this)">
                <p id="msgerror"></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 bg-primary">
                <h5>onfocus</h5>
                <input type="text" class="form-control" onfocus="focus1(this);" value="type here...">
            </div>
            <div class="col-md-3 bg-light">
                <h5>onfocus</h5>
                <input type="text" class="form-control" onfocusin="focusin1(this);" onfocusout="focusout1(this)">
            </div>
            <div class="col-md-3 bg-primary">
                <h5 >oninput</h5>
                    <input type="text" placeholder="type here" oninput="input1(this);" class="form-control">
                    <p id="msginput1"></p>
            </div>
            <div class="col-md-3 bg-light">
                <h5>oninvalid</h5>
                <form>
                    <input type="number" min="0" max="10" placeholder="type here" oninvalid="alert('Nummber is allowed only 0-10')">
                    <input type="submit" class="btn btn-light">
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 bg-light">
                <h5>onkeydown, onkeyup</h5>
                <input type="text" onkeydown="keydown1(this);" onkeyup="keyup1(this);" class="form-control" placeholder="type here...">
            </div>
            <div class="col-md-3 bg-primary">
                <h5>onkeypress</h5>
                <input type="text" onkeypress="keypress1(this);" class="form-control" placeholder="type here...">
                <p id="msgkeypress"></p>
            </div>
            <div class="col-md-3 bg-light">
                <h5>onload</h5>
                <video src="./media/video (2160p).mp4" controls onload="alert('Video is loded')" height="300px" width="300px"></video>
            </div>
            <div class="col-md-3 bg-primary">
                <h5>onloadstart</h5>
                <video src="./media/video (2160p).mp4" controls onloadstart="alert('onloadstart event is occur')" height="300px" width="300px">
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 bg-primary">
                <h5>onmousedown <br> onmouseup</h5>
                <p onmousedown="mousedown1(this);" onmouseup="mouseup1(this);">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum, in nam dolorum culpa voluptatum sed amet alias facere itaque quisquam expedita aperiam quos neque quam, molestiae doloribus ex eius adipisci.
                </p>
            </div>
            <div class="col-md-3 bg-light">
                <h5>onmouseenter, onmouseleave</h5>
                <img src="https://images.pexels.com/photos/674010/pexels-photo-674010.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" height="150px" width="100px" onmouseenter="mouseenter1(this);" onmouseleave="mouseleave1(this)">
            </div>
            <div class="col-md-3 bg-primary">
                <h5>onmousemove, onmouseout</h5>
                <div class="dragcontainer" style="height: 100px;" onmousemove="mousemove1(event)" onmouseout="mouseout1(this)"></div>
                <p id="msgmousemove"></p>
            </div>
            <div class="col-md-3 bg-light">
                <h5>ononline, onoffline</h5>
                <p id="onlinemsg"></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 bg-light">
                <h5>onplay, onpause, onplaying</h5>
                <video src="./media/video (2160p).mp4" onplay="play1(this)" onplaying="playing1(this)" onpause="pause1()" controls  height="300px" width="300px"></video>
                <p id="msgonplay"></p>
            </div>
            <div class="col-md-3 bg-primary">
                <h5>onsubmit</h5>
                <form onsubmit="return valid()">
                    <input type="text" placeholder="Enter name..." id="name" class="form-control">
                    <input type="submit" value="save">
                </form>
            </div>
