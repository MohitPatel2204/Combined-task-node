        .dragcontainer
        {
            height: 50px;
            width: 200PX;
            BORDER: 1PX solid #007bff;
        }
    </style>
    <script>
        function blurfun()
        {
            let blurtxt = document.getElementById('blurtxt');
            blurtxt.value = blurtxt.value.toUpperCase();
        }
        function canplay()
        {
            document.getElementById('msgcanplay').innerHTML = "Video is play";
        }
        function canplaythrough()
        {
            document.getElementById('msgcanplaythrough').innerHTML = "Video is play without stopping";
        }
        function change()
        {
            document.getElementById('msgchange').innerHTML = "Course is : " + document.getElementById('course').value;
        }
        function contextmenu()
        {
            document.getElementById('msgcontextmenu').style.visibility = 'visible';
        }
        function dbclick(x)
        {   
            x.innerHTML = 'Double clicked...';
        }
        function drop(x)
        {
            document.getElementById('dragmsg').innerHTML = 'ondrop event is occur';
        }
        function dragover(x)
        {
            document.getElementById('dragmsg').innerHTML = 'ondragover event is occur';
        }
        function drag(x)
        {
            document.getElementById('dragmsg').innerHTML = 'ondrag event is occur';
        }
        function dragstart(x)
        {
            document.getElementById('dragmsg').innerHTML = 'ondraagstart event is occur';
        }
        function dragend(x)
        {
            document.getElementById('dragmsg').innerHTML = 'ondragend event is occur';
        }
        function durationchange()
        {   
            document.getElementById('msgdurationchange').innerHTML = 'Video duration is change';
        }
        function ended(x)
        {
            document.getElementById('msgended').innerHTML = 'Video is completed';
        }
        function error1(x)
        {
            document.getElementById('msgerror').innerHTML = "Image path is not focund..";
        }
        function focus1(x)
        {
            x.value = "";
        }
        function focusout1(x)
        {
            x.style.background = 'white';
        }
        function focusin1(x)
        {
            x.style.background = 'yellow';
        }   
        function input1(x)
        {
            document.getElementById('msginput1').innerHTML = "Data is : " + x.value;
        }
        function keydown1(x)
        {
            x.style.background = 'green';
        }
        function keyup1(x)
        {
            x.style.background = 'red';
        }
        function keypress1(x)
        {
            x.style.background = 'blue';
            x.style.color = 'white';
        }
        function mousedown1(x)
        {
            x.style.color = 'red';
        }
        function mouseup1(x){
            x.style.color = 'lightblue';
        }
        function mouseenter1(x)
        {
            x.style.border = '3px solid black';
        }
        function mouseleave1(x)
        {
            x.style.border = '0px solid black';
        }
        function mousemove1(x)
        {
            document.getElementById('msgmousemove').innerHTML = "Coordinates : " + x.clientX + " , " + x.clientY;
        }
        function mouseout1(x)
        {
            document.getElementById('msgmousemove').innerHTML = '';
        }
        function online1()
        {
            document.getElementById('onlinemsg').innerHTML = "Network is connected";
        }
        function offline1()
        {
            document.getElementById('onlinemsg').innerHTML = 'Network is not connected';
        }
        function play1()
        {
            document.getElementById('msgonplay').innerHTML = "Video is play";
        }
        function playing1() {
            document.getElementById('msgonplay').innerHTML = "Video is playing";
        }
        function pause1()
        {
           document.getElementById('msgonplay').innerHTML = "Video is paused";
        }
        function valid()
        {
            if(document.getElementById('name').value == "")
            {
                alert("Enter data");
                return false;
            }
            return true;
        }
        function resize1(x)
        {
            
        }
    </script>
