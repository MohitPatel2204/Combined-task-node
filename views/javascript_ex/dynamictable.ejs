<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Dynamic table</title>
	<style>
		td {
			padding: 30px;
		}
	</style>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<script>
		function display()
		{
			let table = document.getElementById('mytable');
			let countrow = table.rows.length;
			let countcell = table.rows[0].cells.length;
			for(let i=0; i<countrow; i++)
			{
				for(let j=0; j<countcell; j++)
				{
					let cell = table.rows[i].cells[j];
					if((i%2==0 && j%2==0) || i%2!=0 && j%2!=0)
					{
						cell.style.background = "#007bff";
					}
					else
					{
						cell.style.background = "#ffc107";
					}
				}
			}
		}

		function addrow() {
			let table = document.getElementById('mytable');
			let row = table.insertRow(table.rows.length);
			for (let i = 0; i < table.rows[0].cells.length; i++) {
				let cell = row.insertCell(i);
			}
			display();
		}

		function addcolumn() {
			let table = document.getElementById('mytable');
			for (let i = 0; i < table.rows.length; i++) {
				let cell = table.rows[i].insertCell(table.rows[i].cells.length);
			}
			display();
		}

		function removecolumn() {
			let table = document.getElementById('mytable');
			for (let i = 0; i < table.rows.length; i++) {
				let row = table.rows[i];
				if (row.cells.length > 2) {
					row.deleteCell(row.cells.length-1);
				}
				else {
					alert("Column minimum 2 you can not delete row");
					break;
				}
			}
		}

		function removerow() {
			let table = document.getElementById('mytable');
			if (table.rows.length > 2) {
				table.deleteRow(table.rows.length-1);
			}
			else {
				alert("Row minimum 2 you can not delete row");
			}
		}
		display();
	</script>
</head>

<body style="padding: 10px;">
	<h1 class="text-danger">
		Dynamic table<br>
		Mohit moradiya<br>
		24DEV044
	</h1>
	<center>
	<table id="mytable">
		<tr>
			<td style="background-color: #007bff;"></td>
			<td style="background-color: #ffc107;"></td>
		</tr>
		<tr>
			<td style="background-color: #ffc107;"></td>
			<td style="background-color: #007bff;"></td>
		</tr>
	</table>
	<br>
	<button onclick="addcolumn();" class="btn btn-success">Add column</button>
	<button onclick="removecolumn();" class="btn btn-danger">Remove column</button>
	<button onclick="addrow();" class="btn btn-success">Add row</button>
	<button onclick="removerow();" class="btn btn-danger">Remove row</button>
</center>
</body>

</html>
